{
    "name": "Spotify Web Player Hotkeys",
    "description": "Add keyboard shortcuts to pause, play next and previous tracks in Spotify",
    "version": "0.5.5",
    "manifest_version": 2,
    "icons": {
        "128": "icon.png"
    },
    "incognito": "split",
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "commands": {
        "a-previous": {
            "description": "Previous track",
            "suggested_key": "Alt+Shift+A",
            "global": true
        },
        "b-play-pause": {
            "description": "Play/pause",
            "suggested_key": "Alt+Shift+S",
            "global": true
        },
        "c-next": {
            "description": "Next track",
            "suggested_key": "Alt+Shift+D",
            "global": true
        },
        "d-like-song": {
            "description": "Like song",
            "suggested_key": "Alt+Shift+X",
            "global": true
        },
        "e-is-song-liked": {
            "description": "Is song liked?",
            "global": true
        },
        "f-shuffle": {
            "description": "Shuffle",
            "global": true
        }
    },
    "permissions": [
        "https://open.spotify.com/*"
    ]
}